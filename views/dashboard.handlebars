{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      <article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
        <strong>Posted by {{user.username}} on {{format_date created_at}}</strong>
    </div>
    </article>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


</head>
<body>

<h2>Search for drinks by name</h2>

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for drinks.." title="Type in a name">

<ul id="myUL">
  <li><a href="#">Rum</a></li>
  <li><a href="#">Vodka</a></li>

  <li><a href="#">Bourbon</a></li>
  <li><a href="#">Tequila</a></li>

  <li><a href="#">Whiskey</a></li>
  <li><a href="#">Margaritas</a></li>
  <li><a href="#">Wine</a></li>
</ul>

<script>
function myFunction() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    ul = document.getElementById("myUL");
    li = ul.getElementsByTagName("li");
    for (i = 0; i < li.length; i++) {
        a = li[i].getElementsByTagName("a")[0];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
        } else {
            li[i].style.display = "none";
        }
    }
}
</script>


