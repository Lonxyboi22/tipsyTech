<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  <title>Dashboard</title>
</head>
<body>
  {{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      <article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
        <strong>Posted by {{user.username}} on {{format_date created_at}}</strong>
    </div>
    </article>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<body>

<h2>Search for Drinks by Name</h2>

<div>
  <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for drinks.." title="Type in a name">
</div>
 <div class="search-button">
       <button type="submit"><a href="/dashboard/edit-post" class="create-btn">Search!</a></button>
    </div>
<ul id="myUL">
  <li><a href="#">Rum</a></li>
  <li><a href="#">Vodka</a></li>

  <li><a href="#">Bourbon</a></li>
  <li><a href="#">Tequila</a></li>

  <li><a href="#">Whiskey</a></li>
</ul>

<script>
async function  myFunction() {
    var input, filter, ul, li, a, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    ul = document.getElementById("myUL");
    li = ul.getElementsByTagName("li");
    for (i = 0; i < li.length; i++) {
        a = li[i].getElementsByTagName("a")[0];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
            li[i].style.display = "";
        } else {
            li[i].style.display = "none";
        }
    }
  try {
     const query = await fetch(`http://127.0.0.1:3001/api/drinks/${input}`);
  }catch(err) {
    console.log(err);
  }
  
}
</script>


<div class="search-button">
    <button type="submit"><a href="/dashboard/createpost" class="create-btn">Add New Drink!</a></button>
</div>


</body>
</html>